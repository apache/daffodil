				</tdml:dfdlInfoset>
			</tdml:infoset>
		</tdml:parserTestCase>
		
		<tdml:parserTestCase name="LengthProp_05" root="LP_05"
		model="LengthProperties-Embedded.dfdl.xsd" description="Section 12 Length Properties - DFDL-12-161R">


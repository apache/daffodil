          <xs:element name="e2" type="xs:string" minOccurs="1" />
          <xs:element name="e3" type="xs:string" minOccurs="1" dfdl:length="{ 5 }" />
        </xs:sequence>
      </xs:complexType>
    </xs:element>
  </tdml:defineSchema>


          </xs:sequence>
          <xs:element name="e2" type="xs:int" maxOccurs="unbounded" />
        </xs:sequence>
      </xs:complexType>
    </xs:element>

</tdml:defineSchema>
  
  <tdml:parserTestCase name="encodingEmptyFail" root="root"

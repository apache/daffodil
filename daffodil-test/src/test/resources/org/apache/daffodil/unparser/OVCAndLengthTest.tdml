<tdml:testSuite
 suiteName="OVCAndLength"
 description="Tests for OVC and length expressions"
 xmlns:tdml="http://www.ibm.com/xmlns/dfdl/testData"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
 xmlns:xs="http://www.w3.org/2001/XMLSchema"
 xmlns:fn="http://www.w3.org/2005/xpath-functions"
 xmlns:ex="http://example.com"
>

 <tdml:defineSchema
  name="model1"
  elementFormDefault="unqualified"
 >
  <xs:include schemaLocation="org/apache/daffodil/xsd/DFDLGeneralFormat.dfdl.xsd"/>
  <dfdl:format
   ref="ex:GeneralFormat"
   encoding="ascii"
   lengthUnits="bytes"
   alignmentUnits="bytes"
   fillByte="X"
  />

  <xs:group name="g1">
   <xs:sequence>
    <xs:element
     name="s1"
     type="xs:string"
     dfdl:lengthKind="explicit"
     dfdl:length="1"
     dfdl:outputValueCalc="{ xs:string(dfdl:valueLength(../s2, 'bytes')) }"
    />
   </xs:sequence>
  </xs:group>

  <xs:element
   name="e1"
   dfdl:lengthKind="implicit"
  >
   <xs:complexType>
    <xs:sequence>
     <xs:sequence dfdl:hiddenGroupRef="ex:g1" />
     <xs:element
      name="s2"
      type="xs:string"
      dfdl:lengthKind="explicit"
      dfdl:length="{ xs:int(../s1) }"
     />
    </xs:sequence>
   </xs:complexType>
  </xs:element>

 </tdml:defineSchema>

 <tdml:unparserTestCase
  name="ovcContentLengthCycle1"
  root="e1"
  model="model1"
 >
  <tdml:infoset>
   <tdml:dfdlInfoset xmlns:ex="http://example.com">
    <ex:e1>
     <s2>abcde</s2>
    </ex:e1>
   </tdml:dfdlInfoset>
  </tdml:infoset>
  <tdml:document>5abcde</tdml:document>
 </tdml:unparserTestCase>

 <tdml:defineSchema
  name="model2"
  elementFormDefault="unqualified"
 >
  <xs:include schemaLocation="org/apache/daffodil/xsd/DFDLGeneralFormat.dfdl.xsd"/>
  <dfdl:format
   ref="ex:GeneralFormat"
   encoding="ascii"
   lengthUnits="bytes"
   alignmentUnits="bytes"
   fillByte="X"
   textStringPadCharacter="X"
   textTrimKind="padChar"
   textPadKind="none"
  />

  <xs:group name="g1">
   <xs:sequence>
    <xs:element
     name="s1"
     type="xs:string"
     dfdl:lengthKind="explicit" dfdl:length="2"
     dfdl:outputValueCalc="{ xs:string(if (dfdl:valueLength(../s2, 'bytes') gt 10) then dfdl:valueLength(../s2, 'bytes') else 10) }"
    />
   </xs:sequence>
  </xs:group>

  <xs:element
   name="e1"
   dfdl:lengthKind="implicit"
  >
   <xs:complexType>
    <xs:sequence>
     <xs:sequence dfdl:hiddenGroupRef="ex:g1" />
     <xs:element
      name="s2"
      type="xs:string"
      dfdl:lengthKind="explicit"
      dfdl:length="{ xs:int(../s1) }"
     />
    </xs:sequence>
   </xs:complexType>
  </xs:element>

 </tdml:defineSchema>

 <tdml:unparserTestCase
  name="ovcContentLengthCycle2"
  root="e1"
  model="model2"
 >
  <tdml:infoset>
   <tdml:dfdlInfoset xmlns:ex="http://example.com">
    <ex:e1>
     <s2>abcde</s2>
    </ex:e1>
   </tdml:dfdlInfoset>
  </tdml:infoset>
  <tdml:document>10abcdeXXXXX</tdml:document>
 </tdml:unparserTestCase>
</tdml:testSuite>


          <field>1</field>
          <field>2</field>
          <field>3</field>
          <field>4</field>
          <field>5</field>
          <field>6</field>
        </ex:file3>
      </tdml:dfdlInfoset>
    </tdml:infoset>
  </tdml:parserTestCase>


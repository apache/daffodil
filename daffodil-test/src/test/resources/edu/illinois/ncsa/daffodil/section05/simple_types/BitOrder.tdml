    </tdml:dfdlInfoset>
    </tdml:infoset>
    <tdml:errors>
      <tdml:error>Schema Definition Error</tdml:error>
      <tdml:error>bitOrder</tdml:error>
      <tdml:error>byte boundary</tdml:error>
    </tdml:errors>
  </tdml:unparserTestCase>


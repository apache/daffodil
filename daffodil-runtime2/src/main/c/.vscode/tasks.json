{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wno-missing-field-initializers",
                "-g",
                "-I",
                ".",
                "**.c",
                "-L",
                ".",
                "-lmxml",
                "-lpthread",
                "-o",
                "${fileDirname}/generated_data"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
